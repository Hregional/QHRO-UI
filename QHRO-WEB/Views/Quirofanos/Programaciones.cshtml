@model IEnumerable<BLL.ClassDailySurgeries>
@{
    ViewBag.Title = "Programaciones";
}

@*Vista cirugias programadas y emergencia*@

<div class="container" id="reloadContent">
    <script>
        function reloadData() {
            $(document).ready(function () {
                $('#reloadContent').load('/Quirofanos/Programaciones');
            })
        }

        $(document).ready(function () {
            var refreshId = setInterval(function () {
                $('#reloadContent').load('/Quirofanos/Programaciones');
            }, 5000);
        });
    </script>

    <div class="row mb-3">
        <div class="col-1">

        </div>
        <div class="col-11" style="margin-top:35px">
            <div class="text-center">
                <h1>Programaciones</h1>
            </div>
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Hora</th>
                        <th scope="col">Qx</th>
                        <th scope="col">No_Historia</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Edad</th>
                        <th scope="col">Procedimiento</th>
                        <th scope="col">Servicio</th>
                        <th scope="col">Cirujano</th>
                        <th scope="col">Anestesista</th>
                        <th scope="col">Asistentes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Hora</th>
                            <td>@item.Qx</td>
                            <td>@item.No_Historia</td>
                            <td>@item.Nombre</td>
                            <td>@item.Edad</td>
                            <td>@item.Procedimiento</td>
                            <td>@item.Servicio</td>
                            <td>@item.Cirujano</td>
                            <td>@item.Anestesista</td>
                            <td>@item.Asistentes</td>
                        </tr>
                    }
                </tbody>
            </table>
            <button type="button" class="btn btn-outline-success" onclick="reloadData()">Reload</button>
        </div>
    </div>

</div>
