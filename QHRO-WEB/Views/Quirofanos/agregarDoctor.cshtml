
@{
    ViewBag.Title = "agregarDoctor";
}

<div class="container" style="margin-top:40px;">
   
    <section>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (BLL.ClassDoctorsWeb item in Session["listadoDocts"] as List<BLL.ClassDoctorsWeb>)
                {
                <tr>
                    <td>@item.DoctorName</td>
                    
                    <td><button type="button" class="btn btn-outline-danger"><a style="color: white; text-decoration: none" href="@Url.Action("eliminarDoctor", "Quirofanos",new {idDoctor=item.IdDoctor})">Eliminar Doctor</a></button> </td>
                </tr>
                }

            </tbody>
        </table>
        <button type="button" class="btn btn-outline-success"><a style="color: white; text-decoration: none"href="@Url.Action("obtenerDoctores", "Quirofanos")">Agregar otro doctor</a></button>
        <button type="button" class="btn btn-success"><a style="color: white; text-decoration: none"href="@Url.Action("solicitarCirugia", "Quirofanos")">Solicitar Cirugía</a></button>
        
    </section>
</div>
