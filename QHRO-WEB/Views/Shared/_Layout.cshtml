    <script src="https://kit.fontawesome.com/572c61a0b7.js" crossorigin="anonymous"></script>

    <link href="@Url.Content("~/Content/css/icons.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/css.css")" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.js"
            integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
            crossorigin="anonymous">
    </script>
</head>
<body>
    <div class="sidebars">
        <div class="logo-details">
            <i class='bx bx-plus-medical icon'></i>
            <div class="logo_name">Quirófanos</div>
            <i class='bx bx-menu' id="btn"></i>
        </div>
        <ul class="nav-lista">
            <li>
                <a href="/Quirofanos/Programaciones">
                    <i class='bx bxs-calendar'></i>
                    <span class="links_name">Programaciones</span>
                </a>
                <span class="tooltip">Programaciones</span>
            </li>
            <li>
                <a href="/Quirofanos/Estado">
                    <i class='bx bxs-institution'></i>
                    <span class="links_name">Quirófanos</span>
                </a>
                <span class="tooltip">Quirófanos</span>

            </li>
            <li>
                @if (User.Identity.IsAuthenticated)
                {
                    if (Session["idPermit"] != null)
                    {
                        <a href="/Quirofanos/Solicitar">
                            <i class='bx bx-edit'></i>
                            <span class="links_name">Solicitar cirugía</span>
                        </a>

                        <span class="tooltip">Solicitar cirugía</span>
                    }
                }

            </li>

          
            <li class="profile">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class='bx bx-log-out' id="log_out" href="/Home/Logout" style="color:white; font-size:30px; left:20px"></a>
                }

                else
                {
                    <a class='bx bx-log-in' id="log_out" href="/Home/Logout" style="color:white; font-size:30px; left:20px"></a>
                }

            </li>
        </ul>
    </div>

    <script>
        let sidebars = document.querySelector(".sidebars");
        let closeBtn = document.querySelector("#btn");
        let searchBtn = document.querySelector(".bx-search");

        closeBtn.addEventListener("click", () => {
            sidebars.classList.toggle("open");
            menuBtnChange();//calling the function(optional)
        });

        searchBtn.addEventListener("click", () => { // sidebars open when you click on the search iocn
            sidebars.classList.toggle("open");
            menuBtnChange(); //calling the function(optional)
        });

